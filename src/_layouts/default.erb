<!doctype html>
<html lang="<%= site.locale %>">
  <head>
    <%= render "head", metadata: site.metadata, title: data.title %>
  </head>
  <body class="<%= data.layout %> <%= data.page_class %> min-h-screen flex items-stretch bg-white p-4" data-controller="fonts" data-fonts-watched-font-face-value="<%= ["Recursive"].to_json %>" data-fonts-watched-font-loaded-event-name-value="fonts-loaded">
    <div class="w-full bg-ochre-300 p-8 md:p-16">
      <main>
        <%= yield %>
      </main>
    </div>
  </body>
</html>
